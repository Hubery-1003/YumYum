@model yum_admin.Models.Admin

@{
    ViewData["Title"] = "Create";
}

<!-- 加入 Bootstrap Icons 的 CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
@* <h1 class="text-center my-4">Create Admin</h1> *@

<div class="container d-flex justify-content-center">
    <div class="card shadow-sm" style="width: 50%;">
        <!-- 修改寬度為一半 -->
        <div class="card-header bg-secondary text-white">
            <h4 class="mb-0">Add Member</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <div class="mb-3">
                    <label asp-for="AdminName" class="form-label"></label>
                    <input asp-for="AdminName" class="form-control" />
                    <span asp-validation-for="AdminName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="AdminAccount" class="form-label"></label>
                    <input asp-for="AdminAccount" class="form-control" />
                    <span asp-validation-for="AdminAccount" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="AdminEmail" class="form-label"></label>
                    <input asp-for="AdminEmail" class="form-control" />
                    <span asp-validation-for="AdminEmail" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="AdminPassword" class="form-label"></label>
                    <div class="input-group">
                        <input asp-for="AdminPassword" class="form-control" type="password" id="password" />
                        <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="AdminPassword" class="text-danger"></span>
                </div>
                
                
               @*  <div class="mb-3">
                    <label asp-for="AdminHeadShot" class="form-label"></label>
                    <input asp-for="AdminHeadShot" class="form-control" />
                    <span asp-validation-for="AdminHeadShot" class="text-danger"></span>
                </div> *@
                <div class="mb-3">
                    <label asp-for="AdminPhone" class="form-label"></label>
                    <input asp-for="AdminPhone" class="form-control" />
                    <span asp-validation-for="AdminPhone" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>






@section Scripts {

    <script>
        // 顯示/隱藏密碼功能
        document.getElementById('togglePassword').addEventListener('click', function () {
            const passwordField = document.getElementById('password');
            const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordField.setAttribute('type', type);

            // 切換圖標
            this.innerHTML = type === 'password' ? '<i class="bi bi-eye"></i>' : '<i class="bi bi-eye-slash"></i>';
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
