@model yum_admin.Models.Admin

@{
    ViewData["Title"] = "Delete";
}

<!-- 加入 Bootstrap Icons 的 CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container d-flex justify-content-center">
    <div class="card shadow-sm" style="width: 50%;">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Member</h4>
        </div>
        <div class="card-body">
            <h3 class="text-center mb-4">你確定你要刪除此資料?</h3>
            <dl class="row">
                <dt class="col-sm-4">帳號</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.AdminAccount)</dd>

                @* <dt class="col-sm-4">密碼</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.AdminPassword)</dd> *@

                <dt class="col-sm-4">名字</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.AdminName)</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.AdminEmail)</dd>

                @* <dt class="col-sm-4">Admin HeadShot</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.AdminHeadShot)</dd> *@

                <dt class="col-sm-4">手機</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.AdminPhone)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="AdminId" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
